-- Write your Schema Here -- 
DROP DATABASE IF EXISTS customer_db;

CREATE DATABASE customer_db;

USE customer_db;

CREATE TABLE customer (
    id INT NOT NULL,
    first_name VARCHAR(30) NOT NULL,
    last_name VARCHAR(30) NOT NULL,
    PRIMARY KEY (id),
);

DROP DATABASE IF EXISTS customer_order_db;

CREATE DATABASE customer_order_db;

USE customer_order_db;

CREATE TABLE customer_order (
    id INT NOT NULL,
    customer_id INT,
    order_details TEXT,
    FOREIGN KEY (customer_id) --says HEY we are pulling this data from somewhere else
    REFERENCES customer(id) ON DELETE SET NULL --points to column of table it is referring to --
);